Package: PTSDdiag
Type: Package
Title: Optimize PTSD Diagnostic Criteria Using PCL-5 Data
Version: 0.1.0
Authors@R: c(
    person(
      "Laura", "Weidmann",
      email = "jane@example.com",
      role = c("aut", "cre")
